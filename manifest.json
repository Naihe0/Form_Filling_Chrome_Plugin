{
  "manifest_version": 3,
  "name": "__MSG_extensionName__",
  "version": "2.0",
  "description": "__MSG_extensionDescription__",
  "default_locale": "en",

  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],

  "host_permissions": [
    "https://api.openai.com/",
    "https://generativelanguage.googleapis.com/",
    "https://dashscope.aliyuncs.com/",
    "https://openrouter.ai/"
  ],

  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "lib/i18n.js",
        "lib/storage.js",
        "content/statusUI.js",
        "content/interactionHandler.js",
        "content/fieldExtractor.js",
        "content/fieldProcessor.js",
        "content/main.js"
      ],
      "run_at": "document_idle"
    }
  ],

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
